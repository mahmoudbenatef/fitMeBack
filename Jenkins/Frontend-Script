pipeline {
    agent any

    stages {
        stage('Preparation') {
            steps {
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/mahmoudbenatef/fitMeFront.git'
            }
        }

        stage('Build') {
            steps {
                sh 'docker build . -t beshlawy38/fitmefront:v1.0'
            }
        }
        
        stage('Artifact') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-hub', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh 'docker login -u ${USERNAME} -p ${PASSWORD}'
                    sh 'docker push beshlawy38/fitmefront:v1.0'
                }
            }
        }
    }
}